{
  "name": "llm-live2d-desktop-assistant",
  "version": "1.0.0",
  "description": "A desktop assistant with Live2D model powered by LLM",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "node tests/index.js",
    "test:aws": "node tests/index.js aws",
    "test:http": "node tests/index.js http",
    "test:ws": "node tests/index.js ws",
    "test:config": "node tests/index.js config",
    "test:electron": "node tests/index.js electron",
    "validate-models": "node scripts/validate-models.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/llm-live2d-desktop-assistant.git"
  },
  "keywords": [
    "llm",
    "live2d",
    "desktop",
    "assistant",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/user/llm-live2d-desktop-assistant/issues"
  },
  "homepage": "https://github.com/user/llm-live2d-desktop-assistant#readme",
  "dependencies": {
    "aws-sdk": "^2.1413.0",
    "axios": "^1.4.0",
    "electron-store": "^8.1.0",
    "ws": "^8.13.0",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@electron/typescript-definitions": "^9.1.5",
    "@types/electron": "^1.6.10",
    "@types/electron-packager": "^15.0.0",
    "@types/electron-store": "^1.3.1",
    "@types/node": "^20.19.13",
    "@types/ws": "^8.5.5",
    "electron": "^38.1.0",
    "electron-builder": "^24.4.0",
    "jest": "^29.6.1",
    "typescript": "^5.1.6"
  },
  "build": {
    "appId": "com.llm.live2d.desktop.assistant",
    "productName": "LLM Live2D Desktop Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!tests/",
      "!.vscode/",
      "!.git/",
      "!.gitignore",
      "!*.md",
      "!*.yml",
      "!*.yaml"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.model3.json",
      "**/*.moc3",
      "**/*.png",
      "**/*.motion3.json",
      "**/*.physics3.json",
      "**/*.json",
      "**/*.yml"
    ],
    "extraResources": [
      {
        "from": "static/desktop/models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "static/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "static/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "static/favicon.ico"
    }
  }
}
