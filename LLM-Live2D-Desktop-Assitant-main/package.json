{
  "name": "llm-live2d-desktop-assistant",
  "version": "1.0.0",
  "description": "A desktop assistant with Live2D model powered by LLM",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on http://localhost:5173 && npm run electron:dev\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "python server.py --port 8000",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "install:all": "npm install && cd frontend && npm install",
    "test": "node tests/index.js",
    "test:aws": "node tests/index.js aws",
    "test:http": "node tests/index.js http",
    "test:ws": "node tests/index.js ws",
    "test:config": "node tests/index.js config",
    "test:electron": "node tests/index.js electron",
    "test:phase1": "node tests/phase1-validation.js",
    "validate-models": "node scripts/validate-models.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/llm-live2d-desktop-assistant.git"
  },
  "keywords": [
    "llm",
    "live2d",
    "desktop",
    "assistant",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/user/llm-live2d-desktop-assistant/issues"
  },
  "homepage": "https://github.com/user/llm-live2d-desktop-assistant#readme",
  "dependencies": {
    "aws-sdk": "^2.1413.0",
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "electron-store": "^8.2.0",
    "ws": "^8.18.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@electron/typescript-definitions": "^9.1.5",
    "@types/electron": "^1.6.10",
    "@types/electron-packager": "^15.0.0",
    "@types/electron-store": "^1.3.1",
    "@types/node": "^20.19.13",
    "@types/ws": "^8.5.5",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^38.1.0",
    "electron-builder": "^24.4.0",
    "jest": "^29.6.1",
    "typescript": "^5.1.6",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.llm.live2d.desktop.assistant",
    "productName": "LLM Live2D Desktop Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!tests/",
      "!frontend/",
      "!.vscode/",
      "!.git/",
      "!.gitignore",
      "!*.md",
      "!*.yml",
      "!*.yaml",
      "dist-frontend/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.model3.json",
      "**/*.moc3",
      "**/*.png",
      "**/*.motion3.json",
      "**/*.physics3.json",
      "**/*.json",
      "**/*.yml"
    ],
    "extraResources": [
      {
        "from": "static/desktop/models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "dist-frontend",
        "to": "dist-frontend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "static/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "static/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "static/favicon.ico"
    }
  }
}
