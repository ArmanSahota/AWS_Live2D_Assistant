{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "lib": ["DOM", "ES2020"],
    "jsx": "react",
    "noImplicitAny": false
  },
  "include": [
    "src/**/*",
    "main.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
